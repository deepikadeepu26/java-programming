class Solution {
    private void allPaths(TreeNode root, List<String> list, StringBuilder sb) {
        if (root == null)
            return;
        int n = sb.length();
        sb.append(root.val);
        if (root.left == null && root.right == null)
            list.add(sb.toString());
        else {
            sb.append("->");
            allPaths(root.left, list, sb);
            allPaths(root.right, list, sb);
        }
        sb.setLength(n);
    }

    public List<String> binaryTreePaths(TreeNode root) {
        List<String> ans = new ArrayList<>();
        allPaths(root, ans, new StringBuilder());
        return ans;
    }
}
